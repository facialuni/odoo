<?xml version="1.0"?>
<odoo>
	<!-- Merge Mailing List  -->
    <record id="mail_merge_mass_mailing_list_view_form" model="ir.ui.view">
        <field name="name">mail.merge.mass.mailing.list.form</field>
        <field name="model">mail.mailing_list.merge</field>
        <field name="arch" type="xml">
            <form string="Merge Mass Mailing List">
                <group string="Merge the Following Mailing Lists">
                    <field name="dst_massmail_list_id"/>
                </group>
                <field name="mailing_list_ids">
                    <tree>
                        <field name="id" groups="base.group_no_one"/>
                        <field name="name"/>
                        <field name="contact_nbr" string="Number of Recipients"/>
                    </tree>
                </field>
                <p class="oe_grey">
                    Warning : Recipients that have been opt-out won't be merge into the destination mailing list.
                </p>
                <footer>
                    <button name="action_massmail_merge" type="object" string="Merge" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!--  Merge Mailing List -->

    <act_window id="mail_merge_mailing_list_action"
        multi="True"
        key2="client_action_multi" name="Merge Selected Mailing Lists"
        res_model="mail.mailing_list.merge" src_model="mail.mass_mailing.list"
        view_mode="form" target="new" view_type="form"/>
</odoo>
